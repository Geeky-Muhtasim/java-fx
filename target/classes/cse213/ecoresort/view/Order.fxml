<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="cse213.ecoresort.controller.OrderController"
      spacing="10" style="-fx-background-color: #f5f5f5;">
    
    <HBox style="-fx-background-color: #4CAF50; -fx-padding: 15;">
        <Label text="New Order" 
               style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back to Home" 
                onAction="#handleBackToHome"
                style="-fx-background-color: #45a049; -fx-text-fill: white; -fx-padding: 8 16;"/>
    </HBox>
    
    <VBox spacing="20" VBox.vgrow="ALWAYS">
        <VBox spacing="10" minWidth="400" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Menu Items" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #333;"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Table Number:" minWidth="100"/>
                <TextField fx:id="tableNumberField" promptText="Enter table number" prefWidth="150"/>
                <Button text="Start Order" onAction="#handleStartOrder" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </HBox>
            
            <TableView fx:id="menuItemsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="80"/>
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"/>
                    <TableColumn fx:id="stockColumn" text="Stock" prefWidth="60"/>
                </columns>
            </TableView>
            
            <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 5;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Quantity:" minWidth="60"/>
                    <Spinner fx:id="quantitySpinner" prefWidth="80" editable="true"/>
                    <Button text="Add to Order" onAction="#handleAddToOrder" 
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </VBox>
        
        <VBox spacing="10" minWidth="400" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Order Details" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #333;"/>
            
            <TableView fx:id="orderLinesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="itemNameColumn" text="Item" prefWidth="150"/>
                    <TableColumn fx:id="itemPriceColumn" text="Unit Price" prefWidth="80"/>
                    <TableColumn fx:id="itemQuantityColumn" text="Qty" prefWidth="60"/>
                    <TableColumn fx:id="lineTotalColumn" text="Total" prefWidth="80"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="80"/>
                </columns>
            </TableView>
            
            <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 5;">
                <Label text="Discount:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ComboBox fx:id="discountComboBox" promptText="Select discount" prefWidth="150"/>
                    <Button text="Apply" onAction="#handleApplyDiscount" 
                            style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
            
            <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #e8f5e8; -fx-background-radius: 5;">
                <Label text="Order Summary" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2E7D32;"/>
                <HBox spacing="10">
                    <Label text="Subtotal:" minWidth="80"/>
                    <Label fx:id="subtotalLabel" text="$0.00" style="-fx-font-weight: bold;"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Tax (10%):" minWidth="80"/>
                    <Label fx:id="taxLabel" text="$0.00"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Discount:" minWidth="80"/>
                    <Label fx:id="discountLabel" text="$0.00"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Total:" minWidth="80" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Label fx:id="totalLabel" text="$0.00" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2E7D32;"/>
                </HBox>
            </VBox>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancel Order" onAction="#handleCancelOrder" 
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                <Button text="Proceed to Payment" onAction="#handleProceedToPayment" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </VBox>
    
</VBox>
