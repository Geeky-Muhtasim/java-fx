<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="cse213.ecoresort.controller.PaymentController"
      spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
    
    <HBox style="-fx-background-color: #4CAF50; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Payment" 
               style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"/>
    </HBox>
    
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Order Summary" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #333;"/>
        
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="Table Number:" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                <Label fx:id="tableNumberLabel" text="-" style="-fx-font-size: 14px;"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Order ID:" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                <Label fx:id="orderIdLabel" text="-" style="-fx-font-size: 14px;"/>
            </VBox>
        </HBox>
        
        <Separator/>
        
        <HBox spacing="10">
            <Label text="Subtotal:" minWidth="100" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="subtotalLabel" text="$0.00" style="-fx-font-size: 14px;"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Tax (10%):" minWidth="100" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="taxLabel" text="$0.00" style="-fx-font-size: 14px;"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Discount:" minWidth="100" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="discountLabel" text="$0.00" style="-fx-font-size: 14px;"/>
        </HBox>
        <Separator/>
        <HBox spacing="10">
            <Label text="Total:" minWidth="100" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
            <Label fx:id="totalLabel" text="$0.00" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2E7D32;"/>
        </HBox>
    </VBox>
    
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Payment Method" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #333;"/>
        
        <ToggleGroup fx:id="paymentMethodGroup"/>
        <RadioButton fx:id="cashRadioButton" text="Cash" toggleGroup="$paymentMethodGroup" selected="true"/>
        <RadioButton fx:id="cardRadioButton" text="Card" toggleGroup="$paymentMethodGroup"/>
        
        <VBox fx:id="cashInputSection" spacing="10" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 5;">
            <Label text="Cash Payment" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Cash Given:" minWidth="100"/>
                <TextField fx:id="cashGivenField" promptText="Enter amount" prefWidth="150"/>
            </HBox>
            <Label fx:id="cashChangeLabel" text="Change: $0.00" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        </VBox>
        
        <VBox fx:id="cardInputSection" spacing="10" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 5;" visible="false">
            <Label text="Card Payment" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Card Number:" minWidth="100"/>
                <TextField fx:id="cardNumberField" promptText="####-####-####-####" prefWidth="200"/>
            </HBox>
        </VBox>
    </VBox>
    
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" 
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20;"/>
        <Button text="Process Payment" onAction="#handleProcessPayment" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>
    
</VBox>
